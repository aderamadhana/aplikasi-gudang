@model gudang_net_baru.Models.Transaction.GoodReceive.GoodReceiveDto;
@{
    ViewData["Title"] = "Edit Good Receive";
    var gr = ViewBag.GoodReceive;
    // var supplier = ViewBag.ListSupplier;
    // var sku = ViewBag.ListSku;
    // var id = ViewBag.Id;
}

<!-- Header -->
<div class="page-header d-flex align-items-center justify-content-between">
    <div>
        <h2 class="h4 mb-0">Good Receive Detail</h2>
        <small class="opacity-75">Menerima barang berdasarkan PO dan mencatat hasil penerimaan</small>
    </div>
</div>
<form method="post" enctype="multipart/form-data" id="poForm">

    <!-- DETAIL -->
    <div class="card card-modern mb-3">
        <div class="card-header">
            <h5><i class="bi bi-receipt"></i> Data Good Receive</h5>
        </div>
        <div class="card-body">
            <div class="row g-3 p-3">
                <table class="table table-sm table-striped mb-0">
                    <tbody>
                        <tr>
                            <th style="width: 20%;">Good Receive No</th>
                            <td>
                                : <span >@gr?.GrnNo</span>
                            </td>
                        </tr>
                        <tr>
                            <th style="width: 20%;">Purchase Order No</th>
                            <td>
                                : <span >@gr?.PoNumber</span>
                            </td>
                        </tr>
                        <tr>
                            <th style="width: 20%;">Supplier</th>
                            <td>
                                : <span >@gr.SupplierName</span>
                            </td>
                        </tr>
                        <tr>
                            <th style="width:160px">Tanggal Terima</th>
                            <td style="width:240px">
                                : <span>@gr?.TanggalTerima</span>
                            </td>
                        </tr>
                        <tr>
                            <th>User Penerima</th>
                            <td>
                                : <span>@gr?.FullName</span>
                            </td>
                        </tr>
                        <tr>
                            <th>Lokasi Stagging</th>
                            <td>
                                : <span>@gr?.LokasiName</span>
                            </td>
                        </tr>
                        <tr>
                            <th>Status Good Receive</th>
                            <td>
                                :
                                @if (gr.StatusGr == "Draft")
                                {
                                    <span class="badge bg-warning" >@gr?.StatusGr</span>
                                }
                                else if (gr.StatusGr == "Posted")
                                {
                                    <span class="badge bg-info" >@gr?.StatusGr</span>
                                }
                                else if (gr.StatusGr == "Closed")
                                {
                                    <span class="badge bg-success" >@gr?.StatusGr</span>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- ITEMS -->
    <div class="card card-modern mb-3">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0"><i class="bi bi-bag-check"></i> Items Order</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive p-3" style="max-height:52vh;overflow:auto;">
                <table class="table table-sm table-bordered align-middle mb-0">
                    <thead class="table-light sticky-top">
                        <tr>
                            <th>Nama Item</th>
                            <th style="width:5%">Qty Order</th>
                            <th style="width:5%">Qty Received</th>
                            <th>Lot No</th>
                            <th>Expiry</th>
                            <th>Status QC</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in gr.Details)
                        {
                            <tr>
                                <td>
                                    <span>@item.ItemName</span>
                                </td>
                                <td>
                                    <span>@item.QtyOrder</span>
                                </td>
                                <td>
                                    <span>@item.QtyReceived</span>
                                </td>
                                <td>
                                    <span>@item.LotNo</span>
                                </td>
                                <td>
                                    <span>@item.Expiry</span>
                                </td>
                                <td>
                                    @if (item.StatusQC == "ok")
                                    {
                                        <span class="badge bg-success">@item?.StatusQC</span>
                                    }
                                    else if (item.StatusQC == "reject")
                                    {
                                        <span class="badge bg-danger">@item?.StatusQC</span>
                                    }
                                    else if (item.StatusQC == "hold")
                                    {
                                        <span class="badge bg-info">@item?.StatusQC</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>