@model LoginDto
@{
}
<!doctype html>
<html lang="id">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Font: Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --text: #eaeaea;
            --muted: #b5b5b5;
            --accent: #5ac8fa;
            --accent-hover: #4dbbe8;
        }

        html, body {
            height: 100%;
            margin: 0;
            font-family: "Poppins", sans-serif;
            overflow: hidden;
        }

        body {
            background: linear-gradient(rgba(15,15,15,0.85), rgba(15,15,15,0.85)), /* overlay gelap */
            url('https://images.unsplash.com/photo-1521737604893-d14cc237f11d?q=80&w=1920&auto=format&fit=crop') center/cover no-repeat; /* ganti sesuai kebutuhan */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            background: rgba(255,255,255,.05);
            border: 1px solid rgba(255,255,255,.1);
            border-radius: 16px;
            backdrop-filter: blur(10px);
            box-shadow: 0 10px 30px rgba(0,0,0,.4);
            padding: 2rem;
            color: var(--text);
        }

        .icon-user {
            width: 64px;
            height: 64px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--accent);
            color: #101010;
            font-size: 2rem;
            box-shadow: 0 6px 18px rgba(90,200,250,.4);
            margin: 0 auto;
        }

        .form-label {
            font-weight: 500
        }

        .form-control {
            background-color: rgba(255,255,255,.08);
            border: 1px solid rgba(255,255,255,.12);
            color: var(--text);
        }

            .form-control::placeholder {
                color: var(--muted)
            }

            .form-control:focus {
                background-color: rgba(255,255,255,.1);
                border-color: var(--accent);
                box-shadow: 0 0 0 .25rem rgba(90,200,250,.25);
                color: var(--text);
            }

        .btn-primary {
            background: var(--accent);
            border: none;
            color: #101010;
            font-weight: 600;
        }

            .btn-primary:hover {
                background: var(--accent-hover)
            }

        a.link-accent {
            color: var(--accent);
            text-decoration: none
        }

            a.link-accent:hover {
                color: var(--accent-hover)
            }

        .text-muted-neo {
            color: var(--muted)
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="text-center mb-4">
            <div class="icon-user"><i class="bi bi-person-fill"></i></div>
            <h4 class="mt-3 mb-1">Masuk</h4>
            <p class="text-muted-neo mb-0">Silakan login untuk melanjutkan</p>
        </div>
        @if(ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Gagal!</strong> @ViewBag.ErrorMessage
            </div>
        }

        <form class="needs-validation" method="post" novalidate>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" asp-for="Email" type="email" class="form-control" placeholder="nama@contoh.com" required>
                <div class="invalid-feedback">Masukkan email yang valid.</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Kata Sandi</label>
                <div class="input-group">
                    <input id="password" asp-for="Password" type="password" class="form-control" placeholder="••••••••" minlength="6" required>
                    <button type="button" class="btn btn-outline-light" id="togglePwd" title="Tampilkan/Sembunyikan">
                        <i class="bi bi-eye"></i>
                    </button>
                    <div class="invalid-feedback">Minimal 6 karakter.</div>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="RememberMe" type="checkbox" id="remember">
                    <label class="form-check-label" for="remember">Ingat saya</label>
                </div>
                <a href="#" class="link-accent">Lupa sandi?</a>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Masuk</button>
            </div>
        </form>

        <p class="text-center text-muted-neo mt-3 mb-0">
            Belum punya akun? <a asp-controller="Login" asp-action="Register" class="link-accent">Daftar</a>
        </p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Validasi Bootstrap
        (() => {
          'use strict';
          const forms = document.querySelectorAll('.needs-validation');
          Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }
              form.classList.add('was-validated');
            }, false);
          });
        })();

        // Toggle password
        const toggleBtn = document.getElementById('togglePwd');
        const pwd = document.getElementById('password');
        toggleBtn.addEventListener('click', () => {
          const isPwd = pwd.type === 'password';
          pwd.type = isPwd ? 'text' : 'password';
          toggleBtn.innerHTML = isPwd ? '<i class="bi bi-eye-slash"></i>' : '<i class="bi bi-eye"></i>';
        });
    </script>
</body>
</html>
