@model gudang_net_baru.Models.Master.Ekspedisi.EkspedisiDto
@{
    ViewData["Title"] = "Tambah Ekspedisi";
    }
<div class="row">
    <div class="col-8">
        <div class="card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <h3>Tambah Ekspedisi</h3>
                    <div class="col mb-3">
                        <div class="form-group">
                            <label>Nama Ekspedisi <span class="text-danger">*</span></label>
                            <input type="text" asp-for="NamaEkspedisi" class="form-control" />
                            <span asp-validation-for="NamaEkspedisi" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col mb-3">
                        <div class="form-group">
                            <label>SLA Pengiriman <span class="text-danger">*</span></label>
                            <textarea class="form-control" asp-for="SlaPengiriman"></textarea>
                            <span asp-validation-for="SlaPengiriman" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col mb-3">
                        <div class="form-group">
                            <label>Jenis Layanan <span class="text-danger">*</span></label>
                            <select class="form-control" asp-for="JenisLayanan">
                                <option value="">Pilih</option>
                                <option value="Express">Express</option>
                                <option value="Regular">Regular</option>
                                <option value="Same-Day">Same-Day</option>
                            </select>
                            <span asp-validation-for="JenisLayanan" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col text-end mb-3">
                        <button type="submit" class="btn btn-primary"> <i class="bi bi-save"></i> Simpan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>